{
  "name": "picolode",
  "displayName": "picolode",
  "description": "Picolisp VS Code Extension",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:picolode.evalSelection",
    "onCommand:picolode.helloWorld"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "picolisp",
        "aliases": ["PicoLisp", "picolisp"],
        "extensions": [".l"],
        "configuration": "./language-configuration.json"
      }
    ],
    "commands": [
      {
        "command": "picolode.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "picolode.evalSelection",
        "title": "Evaluate PicoLisp Selection"
      }
      ,
      {
        "command": "picolode.showLanguageId",
        "title": "Show active languageId"
      }
    ],
    "keybindings": [
      {
        "command": "picolode.evalSelection",
        "key": "ctrl+enter",
        "when": "editorTextFocus && editorLangId == 'picolisp'"
      }
    ]
    ,
    "configuration": {
      "type": "object",
      "title": "PicoLisp",
      "properties": {
        "picolode.pilPath": {
          "type": "string",
          "default": "pil",
          "description": "Path to the PicoLisp executable (pil)."
        },
        "picolode.timeout": {
          "type": "number",
          "default": 5000,
          "description": "Timeout (ms) for PicoLisp evaluation."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
  "watch": "webpack --watch",
  "dev:watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.104.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "eslint": "^9.34.0",
    "typescript": "^5.9.2",
    "ts-loader": "^9.5.4",
    "webpack": "^5.101.3",
    "webpack-cli": "^6.0.1",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
